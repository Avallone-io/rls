{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"],
      "test/*": ["test/*"],
      "typeorm": ["node_modules/typeorm/build/compiled/src"],
      "typeorm/*": ["node_modules/typeorm/build/compiled/src/*"]
    },
    "rootDirs": ["lib", "test"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "utils/**/*.ts",
    "test/**/*.ts",
    "lib/**/*.ts",
    "openCoverageReport.ts",
    "ormconfig.ts"
  ]
}
